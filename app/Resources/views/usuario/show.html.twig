{% extends 'base.html.twig' %}

{% block main %}
    <div id="contenedor_verUsuario">
        <h1>Usuario</h1>
        <div class="row">
            <div class="col l8 m8">
                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ usuario.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ usuario.username }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ usuario.password }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ usuario.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Apellido</th>
                            <td>{{ usuario.apellido }}</td>
                        </tr>
                        
                        <tr>
                            <th>Roles</th>
                            {% for rol in usuario.roles %}
                            
                            <td>{{ rol }}</td>
                        
                            {% endfor %}
                            
                            
                        </tr>
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a href="javascript:cargarVista('{{ path('lista_usuarios') }}','#contenedor_listaUsuarios')">Volver</a>
                    </li>
                    <li>
                        <a href="javascript:cargarVista('{{ path('usuario_edit', { 'id': usuario.id }) }}','')">Editar</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>    
        <div>
        <div class="col l4 m4"></div>
    </div>
{% endblock %}
